<%- include('includes/head.ejs') %>
<link rel='stylesheet' href='/stylesheets/login.css' />
<link rel='stylesheet' href='/stylesheets/uploadMedia.css' />
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>
<body>
<div class="container my-container">
    <%- include('includes/nav.ejs') %>
    <div>
        <div class="row">
            <div class="col-md-3 center-block text-center">
                <span>
                    <a href="#" class="account">Account</a>
                </span>
            </div>
            <div class="col-md-9 center-title">
                <span>
                    <h4>New Media Page</h4>
                </span>
            </div>
        </div>
        <form action="/login" method="POST">
            <div class="row content-block">
                <div class="col-md-3 center-block text-center vertical-menu">
                    <a href="/uploadSingleMedia" class="active">Single Media</a>
                    <a href="/uploadMultipleMedia">Multiple Media</a>
                </div>
                <div class="col-md-7">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="username">Browse:</label>
                        </div>
                        <div class="col-md-7">
                            <input type="file" name="img" id="img" class="file " accept="image/*" value="Browse" required>
                        </div>
                        <div class="col-md-2">
                            <input class="btn btn-light" type="submit" value="Upload">
                        </div>

                    </div>
                    <div class="row content-block">
                        <div class="col-md-3">
                            <label for="title">Title:</label>
                        </div>
                        <div class="col-md-9">
                            <input type="text" class="form-control" id="title" name="title" required>
                        </div>
                    </div>

                    <div class="row content-block">
                        <div class="col-md-3">
                            <label for="desc">Description:</label>
                        </div>
                        <div class="col-md-9">
                            <textarea class="form-control" rows="3" id="desc" name="desc"></textarea>
                        </div>
                    </div>

                    <div class="row content-block">
                        <div class="col-md-3">
                            <label for="tags">Tags:</label>
                        </div>
                        <div class="col-md-9">
                            <textarea class="form-control" rows="3" id="tags" name="tags"></textarea>
                        </div>
                    </div>


                </div>
                <!--<div class="col-md-2 form-group files">
                    <label class="my-auto">OR Drag and drop your file here </label>
                    <input id="file" type="file" class="form-control" height="100%"/>
                </div>-->
            </div>
        </form>

    </div>

</div>
<%- include('includes/end.ejs') %>