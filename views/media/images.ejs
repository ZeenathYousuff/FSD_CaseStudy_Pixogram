<!DOCTYPE html>
<html>
  <head>
  </head>
  <body>
    <div> 
        <form action="/api/pixogram/media/images" method="POST" enctype="multipart/form-data"> 
            <div> 
                <label for="name">Image Caption</label> 
                <input type="text" id="name" placeholder="Name" name="caption" required> 
            </div> 
            <div> 
                <label for="desc">Image Description</label> 
                <input type="text" id="desc" placeholder="Description" name="description" required> 
            </div> 
            <div> 
                <label for="image">Upload Image</label> 
                <input type="file" id="image"
                       name="image" required> 
            </div> 
            <div> 
                <button type="submit">Submit</button> 
            </div> 
        </form> 
    </div> 

    <hr/>

    <!-- MULTIPLE FILES -->
 
<form action="/api/pixogram/media/images/many"  enctype="multipart/form-data" method="POST">
    Select images: <input type="file" name="image" multiple />
    <input type="submit" value="Upload your files"/>
  </form>

    <hr> 
  
    <h1>Uplaoded Images</h1> 
    <div> 
        <% images.forEach(function(image) { %> 
        <div> 
            <div> 
                <img src="data:image/<%=image.img.contentType%>;base64, 
                     <%=image.img.data.toString('base64')%>" width="300" height="250"> 
                <div> 
                    <h5><%= image.caption %></h5> 
                    <p><%= image.description %></p> 
                </div> 
            </div> 
        </div> 
        <% }) %> 
    </div> 
  </body>
</html>
